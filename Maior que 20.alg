algoritmo "Número"

var
a: inteiro
b: inteiro
c: inteiro
inicio

escreva ("Digite o número A: ")
leia (a)
escreval ()

escreva ("Digite o número B: ")
leia (b)
escreval ()
escreval ("********************")
escreval ()
c:=a+b

se (c>20) entao
escreval (c,"+8=",c+8)
senao
escreval (c,"-5=",c-5)
fimse

escreval ()
escreval ("********************")
escreval ()

fimalgoritmo
